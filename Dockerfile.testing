# Testing Dockerfile without PKCS#11 dependencies (CGO disabled)
# Build the manager and agent binaries
FROM golang:1.24-alpine AS builder
ARG TARGETOS
ARG TARGETARCH

WORKDIR /workspace
# Copy the Go Modules manifests
COPY go.mod go.mod
COPY go.sum go.sum
# cache deps before building and copying source so that we don't need to re-download as much
# and so that source changes don't invalidate our downloaded layer
RUN go mod download

COPY cmd/ cmd/
COPY api/ api/
COPY internal/ internal/
COPY web/ web/

# Build unified binary without CGO for testing (uses mock HSM clients)
RUN CGO_ENABLED=0 GOOS=${TARGETOS:-linux} GOARCH=${TARGETARCH} go build -a -o hsm-operator cmd/hsm-operator/main.go

FROM alpine:3.22
# Minimal runtime dependencies for testing
RUN apk add --no-cache ca-certificates

WORKDIR /
COPY --from=builder /workspace/hsm-operator .
COPY --from=builder /workspace/web ./web/
COPY entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh
USER 65532:65532

ENTRYPOINT ["/entrypoint.sh"]